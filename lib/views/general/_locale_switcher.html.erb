<div id="user_locale_switcher" class="locale-list">
  <% if @locales[:available].any? %>
    <% if @locales[:current] == 'ka' %>
      <p class="locale-list-trigger <% @locales[:current] %>">
        <strong><%= link_to locale_name('en'), current_path_with_locale('en'), class:"switch-locale" %></strong>
      </p>
    <% else %>
      <p class="locale-list-trigger <% @locales[:current] %>">
        <strong><%= link_to locale_name('ka'), current_path_with_locale('ka'), class:"switch-locale" %></strong>
      </p>
    <% end %>
  <% end %>
</div>

