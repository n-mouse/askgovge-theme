<%= render :partial => 'general/localised_datepicker'  %>

<div id="list-filter" class="list-filter">

    <div class="filter_container clearfix">

        <h1><%= @title %></h1>

        <%= form_tag(request.path, :method => "get", :id=>"filter_requests_form") do %>
        <div class="list-filter-item searchbar">
            <%= label_tag(:query, _("Keywords"), :class=>"form_label title") %>
            <%= text_field_tag(:query, params[:query]) %>
        </div>

        <div class="list-filter-item datebar">
            <%= label_tag(:query, _("Made between"), :class=>"form_label title datetitle") %>
            <%= text_field_tag(:request_date_after, params[:request_date_after], {:class => "use-datepicker", :size => 10}) %>
            <%= label_tag(:query, _("and"), :class=>"form_label tiree") %>
            <%= text_field_tag(:request_date_before, params[:request_date_before], {:class => "use-datepicker", :size => 10}) %>
        </div>



        <div class="list-filter-item buttonbar">
            <%= submit_tag(_("Search")) %>
        </div>

        <% end %>

    </div>

  <%= after_form_fields if defined?(after_form_fields) -%>

</div>
